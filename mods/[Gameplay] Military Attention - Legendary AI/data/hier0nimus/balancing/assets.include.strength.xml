    <!-- Attack - Set global values as fallbacks - Specific AI values determine their personality so we do not adjust those much -->

    <!-- GLOBAL CHANGES IN HIGHEST LEVEL AS FALLBACK -->

    <!-- EASY AI TEMPLATE - 168 - Global AI easy values  -->
    <ModOp Type="merge" GUID="168" Path="/Values/MilitaryAI">
        <Attack>
            <MilitaryStrengthRatio>150</MilitaryStrengthRatio>
            <RallyBeforeAttack>1</RallyBeforeAttack>
        </Attack>
    </ModOp>

    <!-- MEDIUM AI TEMPLATE - 169 - Global AI medium values  -->
