<!--
Balancing - Strengths
-->

<ModOps>

    <!-- ********************************** STRENGTH REBALANCE ********************************** -->

    <!-- ******* BALANCE MILITARY STRENGTH AI ******* -->

    <!-- StrengthLevels - Set global values as fallbacks - Specific AI values determine their personality so we do not adjust those much -->

    <!-- EASY AI TEMPLATE - 168 - Global AI easy values  -->
    <ModOp Type="merge" GUID="168" Path="/Values/MilitaryAI">
        <StrengthLevels>
            <Levels>
                <Inferior>
                    <MaxStrengthRatio>80</MaxStrengthRatio>
                    <Flee>1</Flee>
                </Inferior>
                <Equal>
                    <MaxStrengthRatio>140</MaxStrengthRatio>
                    <Flee>1</Flee>
                </Equal>
                <Superior>
                    <MaxStrengthRatio>99999999</MaxStrengthRatio>
                    <Flee>0</Flee>
                </Superior>
            </Levels>
            <BudgetThreshold>100</BudgetThreshold>
        </StrengthLevels>
    </ModOp>

