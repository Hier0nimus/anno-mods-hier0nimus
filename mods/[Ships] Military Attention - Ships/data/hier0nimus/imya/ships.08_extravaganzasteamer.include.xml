<!--
IMYA TWEAKS - SHIPS - EXTRAVAGANZA STEAMER
-->

<ModOps>

    <!-- Extravaganza Steamer -->

    <ImyaTweaks Title="Extravaganza Steamer" Description="Tradeship | Steamship" Icon="data/ui/2kimages/main/3dicons/ships/icon_ship_great_eastern.png"/>

    <ModOp Type="replace" GUID="102455" Path="/Values/Walking/ForwardSpeed" ModOpID="102455_ForwardSpeed" Skip="1">
        <ForwardSpeed>5.2</ForwardSpeed>
    </ModOp>

    <ImyaExpose Path="self::ForwardSpeed" ModOpID="102455_ForwardSpeed" Kind="Slider" ExposeID="ForwardSpeed">
        <SliderDefinition Min="0" Max="15" Stepping="0.25" />
    </ImyaExpose>

    <ModOp Type="replace" GUID="102455" Path="/Values/Walking/SessionTransferSpeedFactor" ModOpID="102455_SessionTransferSpeedFactor" Skip="1">
        <SessionTransferSpeedFactor>1</SessionTransferSpeedFactor>
    </ModOp>

    <ImyaExpose Path="self::SessionTransferSpeedFactor" ModOpID="102455_SessionTransferSpeedFactor" Kind="Slider" ExposeID="SessionTransferSpeedFactor">
        <SliderDefinition Min="0" Max="3" Stepping="0.25" />
    </ImyaExpose>

    <ModOp Type="replace" GUID="102455" Path="/Values/Attackable/MaximumHitPoints" ModOpID="102455_MaximumHitPoints" Skip="1">
        <MaximumHitPoints>5000</MaximumHitPoints>
    </ModOp>

    <ImyaExpose Path="self::MaximumHitPoints" ModOpID="102455_MaximumHitPoints" Kind="Slider" ExposeID="MaximumHitPoints">
        <SliderDefinition Min="50" Max="17500" Stepping="50" />
    </ImyaExpose>

    <Group Condition="!#new_horizons_ships">
        <ModOp Type="replace" GUID="102455" Path="/Values/ItemContainer/SlotCount" ModOpID="102455_SlotCount" Skip="1">
            <SlotCount>6</SlotCount>
        </ModOp>
    </Group>

    <Group Condition="#new_horizons_ships">
        <Group Condition="!#nh_revert_cargo_ship_changes">
            <ModOp Type="replace" GUID="102455" Path="/Values/ItemContainer/SlotCount" ModOpID="102455_SlotCount" Skip="1">
                <SlotCount>8</SlotCount>
            </ModOp>
        </Group>
    </Group>

    <ImyaExpose Path="self::SlotCount" ModOpID="102455_SlotCount" Kind="Slider" ExposeID="SlotCount">
        <SliderDefinition Min="1" Max="8" Stepping="1" />
    </ImyaExpose>

    <ModOp Type="merge" GUID="102455" Path="/Values/ItemContainer" ModOpID="102455_StackLimit" Skip="1">
        <StackLimit>50</StackLimit>
    </ModOp>

    <ImyaExpose Path="self::StackLimit" ModOpID="102455_StackLimit" Kind="Slider" ExposeID="StackLimit">
        <SliderDefinition Min="50" Max="500" Stepping="50" />
    </ImyaExpose>

    <ModOp Type="replace" GUID="102455" Path="/Values/ItemContainer/SocketCount" ModOpID="102455_SocketCount" Skip="1">
        <SocketCount>3</SocketCount>
    </ModOp>

    <ImyaExpose Path="self::SocketCount" ModOpID="102455_SocketCount" Kind="Slider" ExposeID="SocketCount">
        <SliderDefinition Min="1" Max="4" Stepping="1" />
    </ImyaExpose>

    <ModOp Type="replace" GUID="102455" Path="/Values/Cost/InfluenceCostPoints" ModOpID="102455_InfluenceCostPoints" Skip="1">
        <InfluenceCostPoints>12</InfluenceCostPoints>
    </ModOp>

    <ImyaExpose Path="self::InfluenceCostPoints" ModOpID="102455_InfluenceCostPoints" Kind="Slider" ExposeID="InfluenceCostPoints">
        <SliderDefinition Min="1" Max="25" Stepping="1" />
    </ImyaExpose>

    <ModOp Type="replace" GUID="102455" Path="/Values/Craftable/CraftingTime" ModOpID="102455_CraftingTime" Skip="1">
        <CraftingTime>540000</CraftingTime>
    </ModOp>

    <ImyaExpose Path="self::CraftingTime" ModOpID="102455_CraftingTime" Kind="Slider" ExposeID="CraftingTime">
        <SliderDefinition Min="1000" Max="1000000" Stepping="1000" />
    </ImyaExpose>

    <ModOp Type="replace" GUID="102455" Path="/Values/ShipMaintenance/Maintenance" ModOpID="102455_Maintenance" Skip="1">
        <Maintenance>100</Maintenance>
    </ModOp>

    <ImyaExpose Path="self::Maintenance" ModOpID="102455_Maintenance" Kind="Slider" ExposeID="Maintenance">
        <SliderDefinition Min="0" Max="1000" Stepping="5" />
    </ImyaExpose>

    <ModOp Type="merge" GUID="102455" Path="/Values/TradeRouteVehicle" ModOpID="102455_LoadingSpeedFactor" Skip="1">
        <LoadingSpeedFactor>1</LoadingSpeedFactor>
    </ModOp>

    <ImyaExpose Path="self::LoadingSpeedFactor" ModOpID="102455_LoadingSpeedFactor" Kind="Slider" ExposeID="LoadingSpeedFactor">
        <SliderDefinition Min="0.25" Max="4" Stepping="0.25" />
    </ImyaExpose>

    <ModOp Type="merge" GUID="102455" Path="/Values/Cost/Costs/Item[Ingredient='1010017']" ModOpID="102455_Cost_Coins" Skip="1">
        <Amount>20000</Amount>
    </ModOp>

    <ImyaExpose Path="self::Amount" ModOpID="102455_Cost_Coins" Kind="Slider" ExposeID="Building Cost Coins">
        <SliderDefinition Min="1" Max="250000" Stepping="500" />
    </ImyaExpose>

    <ModOp Type="merge" GUID="102455" Path="/Values/Cost/Costs/Item[Ingredient='1010218']" ModOpID="102455_Cost_SteelBeams" Skip="1">
        <Amount>20</Amount>
    </ModOp>

    <ImyaExpose Path="self::Amount" ModOpID="102455_Cost_SteelBeams" Kind="Slider" ExposeID="Building Cost Steel Beams">
        <SliderDefinition Min="1" Max="100" Stepping="1" />
    </ImyaExpose>

    <ModOp Type="merge" GUID="102455" Path="/Values/Cost/Costs/Item[Ingredient='1010224']" ModOpID="102455_Cost_SteamMotors" Skip="1">
        <Amount>20</Amount>
    </ModOp>

    <ImyaExpose Path="self::Amount" ModOpID="102455_Cost_SteamMotors" Kind="Slider" ExposeID="Building Cost Steam Motors">
        <SliderDefinition Min="1" Max="100" Stepping="1" />
    </ImyaExpose>

</ModOps>