<ModOps>

    <ImyaTweaks Title="Phillip Sky, Going with the flow of the wind" Description="Airships" Icon="data/ui/2kimages/main/3dicons/ships/icon_airship.png"/>

    <!-- Phillip Sky, Going with the flow of the wind 1742000044-1742000045 -->

    <ModOp GUID="1742000044" Type="replace" Path="/Values/VehicleUpgrade/ForwardSpeedUpgrade/Value" ModOpID="1742000044_ForwardSpeedUpgrade" Skip="1">
        <Value>10</Value>
    </ModOp>

    <ImyaExpose Path="self::Value" ModOpID="1742000044_ForwardSpeedUpgrade" Kind="Slider" ExposeID="Movement Speed (%)">
        <SliderDefinition Min="-100" Max="200" Stepping="1" />
    </ImyaExpose>

    <ModOp GUID="1742000044" Type="replace" Path="/Values/TradeShipUpgrade/LoadingSpeedUpgrade/Value" ModOpID="1742000044_LoadingSpeedUpgrade" Skip="1">
        <Value>50</Value>
    </ModOp>

    <ImyaExpose Path="self::Value" ModOpID="1742000044_LoadingSpeedUpgrade" Kind="Slider" ExposeID="Loading Speed (%)">
        <SliderDefinition Min="0" Max="200" Stepping="1" />
    </ImyaExpose>

    <ModOp GUID="1742000044" Type="replace" Path="/Values/VehicleUpgrade/IgnoreWeightFactorUpgrade/Value" ModOpID="1742000044_IgnoreWeightFactorUpgrade" Skip="1">
        <Value>50</Value>
    </ModOp>

    <ImyaExpose Path="self::Value" ModOpID="1742000044_IgnoreWeightFactorUpgrade" Kind="Slider" ExposeID="Cargo Slowdown (%)" Description="% of Cargo Slowdown. 50% will be ingame Cargo Slowdown reduced with -50%.">
        <SliderDefinition Min="-100" Max="100" Stepping="1" />
    </ImyaExpose>

</ModOps>