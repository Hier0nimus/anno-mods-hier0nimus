<ModOps>

    <ImyaTweaks Title="Kulwa Mto Wa Bluu, Less damage more speed and cargo" Description="Warships" Icon="data/ui/2kimages/main/3dicons/ships/icon_ship_battlecruiser.png"/>

    <!-- Kulwa Mto Wa Bluu, Less damage more speed & cargo 1742000182-1742000183 -->

    <ModOp GUID="1742000182" Type="replace" Path="/Values/VehicleUpgrade/ForwardSpeedUpgrade/Value" ModOpID="1742000182_ForwardSpeedUpgrade" Skip="1">
        <Value>10</Value>
    </ModOp>

    <ImyaExpose Path="self::Value" ModOpID="1742000182_ForwardSpeedUpgrade" Kind="Slider" ExposeID="Movement Speed (%)">
        <SliderDefinition Min="-100" Max="200" Stepping="1" />
    </ImyaExpose>

    <ModOp GUID="1742000182" Type="replace" Path="/Values/VehicleUpgrade/IgnoreWeightFactorUpgrade/Value" ModOpID="1742000182_IgnoreWeightFactorUpgrade" Skip="1">
        <Value>50</Value>
    </ModOp>

    <ImyaExpose Path="self::Value" ModOpID="1742000182_IgnoreWeightFactorUpgrade" Kind="Slider" ExposeID="Cargo Slowdown (%)" Description="% of Cargo Slowdown. 20% will be ingame Cargo Slowdown reduced with -20%.">
        <SliderDefinition Min="-100" Max="100" Stepping="1" />
    </ImyaExpose>

    <ModOp GUID="1742000182" Type="replace" Path="/Values/VehicleUpgrade/IgnoreDamageFactorUpgrade/Value" ModOpID="1742000182_IgnoreDamageFactorUpgrade" Skip="1">
        <Value>50</Value>
    </ModOp>

