        <SliderDefinition Min="-100" Max="100" Stepping="1" />
    </ImyaExpose>

    <ModOp GUID="1742000182" Type="replace" Path="/Values/AttackerUpgrade/BaseDamageUpgrade/Value" ModOpID="1742000182_BaseDamageUpgrade" Skip="1">
