    <ModOp GUID="1742000182" Type="replace" Path="/Values/AttackerUpgrade/AttackRangeUpgrade/Value" ModOpID="1742000182_AttackRangeUpgrade" Skip="1">
        <Value>5</Value>
    </ModOp>

    <ImyaExpose Path="self::Value" ModOpID="1742000182_AttackRangeUpgrade" Kind="Slider" ExposeID="Range (%)">
        <SliderDefinition Min="-100" Max="100" Stepping="1" />
