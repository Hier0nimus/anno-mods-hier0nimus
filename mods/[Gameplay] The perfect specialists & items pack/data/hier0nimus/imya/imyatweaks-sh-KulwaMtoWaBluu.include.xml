    <ModOp GUID="1742000182" Type="replace" Path="/Values/AttackerUpgrade/LineOfSightRangeUpgrade/Value" ModOpID="1742000182_LineOfSightRangeUpgrade" Skip="1">
        <Value>5</Value>
    </ModOp>

    <ImyaExpose Path="self::Value" ModOpID="1742000182_LineOfSightRangeUpgrade" Kind="Slider" ExposeID="Line Of Sight (%)">
        <SliderDefinition Min="-100" Max="100" Stepping="1" />
    </ImyaExpose>

    <ModOp GUID="1742000182" Type="replace" Path="/Values/AttackerUpgrade/AttackSpeedUpgrade" ModOpID="1742000182_AttackSpeedUpgrade" Skip="1">
        <AttackSpeedUpgrade>5</AttackSpeedUpgrade>
    </ModOp>

    <ImyaExpose Path="self::AttackSpeedUpgrade" ModOpID="1742000182_AttackSpeedUpgrade" Kind="Slider" ExposeID="Attack Speed (%)">
        <SliderDefinition Min="-100" Max="100" Stepping="1" />
    </ImyaExpose>

</ModOps>